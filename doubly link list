#include <iostream>
#include <conio.h>
using namespace std;

struct node
{
    struct node *next;
    struct node *prev;
    int data;
} *list, *first, *last, *newnode;

void create()
{
    int e;
    first = NULL;
    last = NULL;
    cout << "\nenter data(-99 to exit):";
    cin >> e;

    while (e != -99)
    {
        newnode = new node;
        newnode->data = e;
        newnode->prev = NULL;
        newnode->next = NULL;

        if (first == NULL)
            first = newnode;
        else
        {
            last->next = newnode;
            newnode->prev = last;
        }

        last = newnode;

        cout << "enter data(-99 to exit):";
        cin >> e;
    }
}

void disp_left()
{
    list = first;
    do
    {
        cout << "\t " << list->data;
        list = list->next;
    } while (list != NULL);
}

void disp_right()
{
    list = last;
    do
    {
        cout << "\t " << list->data;
        list = list->prev;
    } while (list != NULL);
}

void insert()
{
    int e, p, i;
    cout << "enter position";
    cin >> p;

    newnode = new node;
    cout << "enter data ";
    cin >> e;

    newnode->data = e;
    newnode->prev = NULL;
    newnode->next = NULL;

    if (p == 1)
    {
        newnode->next = first;
        first->prev = newnode;
        first = newnode;
        return;
    }

    list = first;
    for (i = 1; i <= p - 2 && list != last; i++)
        list = list->next;

    if (list == last)
    {
        list->next = newnode;
        newnode->prev = list;
        last = newnode;
    }
    else
    {
        newnode->next = list->next;
        newnode->prev = list;
        list->next->prev = newnode;
        list->next = newnode;
    }
}

void del()
{
    int p, i;
    cout << "\nenter position";
    cin >> p;

    if (p == 1)
    {
        first = first->next;
        if (first != NULL)
            first->prev = NULL;
        return;
    }

    list = first;
    for (i = 1; i <= p - 2; i++)
        list = list->next;

    if (list->next == NULL || list == NULL)
    {
        cout << "\n out of order";
    }
    else
    {
        list->next = list->next->next;
        if (list->next != NULL)
            list->next->prev = list;
    }
}

void main()
{
    int ch;
    do
    {
        clrscr();
        cout << "\n\t1. Create DLL";
        cout << "\n\t2. insert";
        cout << "\n\t3. Delete";
        cout << "\n\t4. Display from left";
        cout << "\n\t5. Display from right";
        cout << "\n\t6. Exit";
        cout << "\n\tEnter your choice :";
        cin >> ch;

        switch (ch)
        {
        case 1:
            create();
            break;
        case 2:
            insert();
            break;
        case 3:
            del();
            break;
        case 4:
            disp_left();
            break;
        case 5:
            disp_right();
            break;
        case 6:
            break;
        default:
            cout << "\n wrong choice";
        }
        getch();
    } while (ch != 6);
}
