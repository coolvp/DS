#include <iostream>
#include <conio.h>
using namespace std;

struct node
{
    int data;
    struct node *next;
} *newnode, *first, *last, *list;

void create()
{
    int e;
    first = NULL;
    cout << "enter data (-99 to exit) :";
    cin >> e;

    while (e != -99)
    {
        newnode = new node;
        newnode->data = e;
        newnode->next = NULL;

        if (first == NULL)
            first = newnode;
        else
            last->next = newnode;

        last = newnode;

        cout << "enter data (-99 to exit) :";
        cin >> e;
    }
}

void display()
{
    newnode = first;
    do
    {
        cout << "\t" << newnode->data;
        newnode = newnode->next;
    } while (newnode != NULL);
}

void insert()
{
    int e, p, i;
    cout << "enter position :";
    cin >> p;

    newnode = new node;
    cout << "enter data :";
    cin >> e;

    newnode->data = e;
    newnode->next = NULL;

    if (p == 1)
    {
        newnode->next = first;
        first = newnode;
    }
    else
    {
        list = first;
        for (i = 1; i <= p - 2 && list != last; i++)
            list = list->next;

        if (list == last)
        {
            list->next = newnode;
            last = newnode;
        }
        else
        {
            newnode->next = list->next;
            list->next = newnode;
        }
    }
}

void del()
{
    int p, i;
    cout << "enter position :";
    cin >> p;

    if (p == 1)
    {
        first = first->next;
    }
    else
    {
        list = first;
        for (i = 1; i <= p - 2; i++)
            list = list->next;

        if (list->next == NULL || list == NULL)
        {
            cout << "\nout of order";
        }
        else
        {
            list->next = list->next->next;
        }
    }
}

void main()
{
    int ch;
    do
    {
        clrscr();
        cout << "\n\t 1.create SLL";
        cout << "\n\t 2.display";
        cout << "\n\t 3.insert element";
        cout << "\n\t 4.delete element";
        cout << "\n\t 5.exit";
        cout << "\n\tenter choice:";
        cin >> ch;

        switch (ch)
        {
        case 1:
            create();
            break;
        case 2:
            display();
            break;
        case 3:
            insert();
            break;
        case 4:
            del();
            break;
        case 5:
            cout << "\nBye Bye..";
            break;
        default:
            cout << "wrong choice";
        }
        getch();
    } while (ch != 5);
}
